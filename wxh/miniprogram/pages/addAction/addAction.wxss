/**index.wxss**/
.usermotto {
    width: 90%;
    margin-top: 50px;
}

.getData {
    margin-top: 20rpx;
    border-radius: 30px;
    background-color: rgba(0, 255, 179, 0.514);
}

.detail {
    margin-top: 20rpx;
    border-radius: 30px;
    background-color: rgba(0, 255, 179, 0.514);
}

.describe {
    font-size: 14px;
    padding: 10px;
    box-sizing: border-box;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(17, 17, 17, 1);
    width: 100%;
}

.isMe {
    width: 100%;
    height: 20px;
    margin-top: 16px;
    line-height: 20px;
    text-align: center;
}

.divLine {
    background: #e0e3da;
    width: 34%;
    height: 1px;
    float: left;
    margin-top: 12px;
}

.me_festival {
    width: 30%;
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    border: 1px solid #e0e3da;
    border-radius: 10px;
    padding: 2px;
    float: left;
}

.me_festival_item,.other_festival_item {
    margin-top: 10px;
    text-align: center;
}

.other_festival_item{
    border-bottom:1px solid #e0e3da;
    margin-left: 10px;
}

.me_festival_item_value {
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
}

.img_view {
    height: 80px;
}

.festival_img {
    width: 60px;
    height: 60px;
    margin: 5px;
}

.right {
    width: 16px;
    height: 16px;
    float: right;
    margin-top: 30px;
    margin-right: 10px;
}

.isOther {
    width: 100%;
    height: 20px;
    line-height: 20px;
    text-align: center;
}

.Other_festival {
    width: 36%;
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    border: 1px solid #e0e3da;
    border-radius: 10px;
    padding: 2px;
    float: left;
}

.Other_divLine {
    background: #e0e3da;
    width: 31%;
    height: 1px;
    float: left;
    margin-top: 12px;
}

.other_festival_item {
    margin-top: 10px;
    text-align: left;
}
.img_view{
    text-align: center;
}
.other_festival_item_name,.other_festival_item_value{

    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
}
.other_festival_item_name{
    margin-left: 20px;
}
